import java.time.DayOfWeek;
import java.time.LocalDate;
import java.util.Scanner;

public class CalendarPrinter {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Take input from user
        System.out.print("Enter year: ");
        int year = sc.nextInt();
        System.out.print("Enter month (1-12): ");
        int month = sc.nextInt();

        // Create LocalDate for the first day of the month
        LocalDate firstDay = LocalDate.of(year, month, 1);
        DayOfWeek dayOfWeek = firstDay.getDayOfWeek();

        // Get how many days are in this month
        int daysInMonth = firstDay.lengthOfMonth();

        // Print header
        String monthName = firstDay.getMonth().toString().substring(0,1) + 
                           firstDay.getMonth().toString().substring(1).toLowerCase();
        System.out.println("\nCalendar for the month of " + monthName + ", " + year);
        System.out.println("Su  Mo  Tu  We  Th  Fr  Sa");

        // Calculate starting position
        int startDay = dayOfWeek.getValue() % 7; // Sunday=0, Monday=1, ... Saturday=6

        // Print spaces before the first day
        for (int i = 0; i < startDay; i++) {
            System.out.print("    ");
        }

        // Print the days of the month
        for (int day = 1; day <= daysInMonth; day++) {
            System.out.printf("%-4d", day); // Print day with spacing

            // Break line after Saturday
            if ((day + startDay) % 7 == 0) {
                System.out.println();
            }
        }
        System.out.println();
    }
}
